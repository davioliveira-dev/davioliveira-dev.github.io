<style>
	:root {
		--dark-background: #1f1f1f;
		--label-text: #7F8C8C;
		--light-background: #f9f9fa;

		.secondary {
			color: var(--label-text);
		}
	}

	@keyframes typing {
		from {
			width: 0;
		}
		to {
			width: 100%;
		}
	}

	@keyframes blink {
		0%,
		50% {
			opacity: 1;
		}
		50.1%,
		100% {
			opacity: 0;
		}
	}

	body {
		background-color: var(--light-background);
		color: var(--dark-background);
		font-family: 'Inter', sans-serif;
		height: 100%;
		overflow: hidden;
	}

	@media (prefers-color-scheme: dark) {
		body {
			background-color: var(--dark-background);
			color: var(--light-background);
		}
	}

	main {
		display: grid;
		grid-template-columns: 1fr 1fr;
		margin: 0 auto;
		max-width: 1280px;
		min-height: 100vh;
		place-items: center;

		@media screen and (max-width: 767px) {
			grid-template-columns: 1fr;
		}
	}

	aside .blinking-cursor {
		animation: blink 1s infinite;
		margin-left: 5px;
	}

	aside h1 {
		animation: typing 0.5s steps(40, end), blink-caret .75s step-end infinite;
		font-size: 2rem;
		margin: 0;
		overflow: hidden;
		white-space: nowrap;
	}

	aside p {
		animation: typing 1.5s steps(40, end), blink-caret .75s step-end infinite;
		overflow: hidden;
		white-space: nowrap;
	}
}
</style>
